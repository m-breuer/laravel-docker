#!/usr/bin/env bash

if [ -z "$WWWUSER" ]; then
    WWWUSER=www-data
fi

if [ ! -d "/var/www" ]; then
    mkdir -p /var/www
fi

if [ ! -z "$WWWGROUP" ]; then
    groupadd -g $WWWGROUP $WWWUSER
fi

if [ ! -z "$WWWUSER" ]; then
    useradd -u $WWWUSER -g $WWWGROUP -d /var/www -s /bin/bash $WWWUSER
fi

chown -R $WWWUSER:$WWWGROUP /var/www

/usr/sbin/php-fpm8.4 -D
/usr/sbin/nginx -g "daemon off;"
/usr/sbin/cron -f
